rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile pictures
    match /profile_pictures/{userId} {
      // Allow read access to everyone for profile pictures.
      allow read;
      // Allow write access (create, update, delete) only to the authenticated user
      // who owns the profile picture. The user's UID must match the file name.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
